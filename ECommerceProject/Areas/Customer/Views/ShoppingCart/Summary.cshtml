@model ECommerceProject.Models.ShoppingCartViewModel
@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Customer/ShoppingCart/Summary.css" rel="stylesheet" />
</head>

<form method="post">
    <div class="container">
        <div class="card" style="background-color: #dcdbdb; border:0;">
            <div class="card-body">
                <div class="row">
                    
                    <div class="col-md-6">
                        <label for="inputPassword">Ad</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.Name" class="form-control">
                                <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Soyad</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.Surname" class="form-control">
                                <span asp-validation-for="OrderHeader.Surname" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Telefon</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.PhoneNumber" class="form-control">
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Şehir</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.City" class="form-control">
                                <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Semt</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.District" class="form-control">
                                <span asp-validation-for="OrderHeader.District" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Posta Kodu</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.PostCode" class="form-control">
                                <span asp-validation-for="OrderHeader.PostCode" class="text-danger"></span>
                            </div>
                        </div>
                        <label for="inputPassword">Adres</label>
                        <div class="mb-3 row">
                            <div class="col-sm-9">
                                <input type="text" asp-for="OrderHeader.Address" class="form-control">
                                <span asp-validation-for="OrderHeader.Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-12" id="Urunler">
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.ListOfShoppingCards)
                                {
                                    <li class="list-group-item d-flex justify-content-between lh-sm">
                                        <div>
                                            <h6 class="my-0">@item.Product.Title</h6>
                                            <small class="text-muted">Adet :@item.Count</small>
                                        </div>
                                        <span class="text-muted">@((item.Count*item.Product.Price).ToString("0.00")) ₺</span>
                                    </li>
                                }

                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <div class="text-success">
                                        <h6 class="my-0">Toplam Tutar :</h6>
                                    </div>
                                    <span class="text-success">@(Model.OrderHeader.OrderTotal.ToString("0.00")) ₺</span>
                                </li>
                            </ul>
                        </div>

                        <label for="inputPassword">Kart Adı</label>
                        <div class="mb-3 row">
                            <div class="col-sm-8">
                                <input type="text" asp-for="OrderHeader.CardName" class="form-control">
                                <span asp-validation-for="OrderHeader.CardName" class="text-danger"></span>
                            </div>
                        </div>

                        <label for="inputPassword">Kart Numarası</label>
                        <div class="mb-3 row">
                            <div class="col-sm-8">
                                <input type="text" asp-for="OrderHeader.CardNumber" class="form-control">
                                <span asp-validation-for="OrderHeader.CardNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <label>Kart Son Kullanma Tarihi</label>
                        <div class="mb-3 row">
                            <div class="col-sm-2">
                                <label>Ay</label>
                                <input type="text" asp-for="OrderHeader.ExpirationMonth" class="form-control" id="MonthInput" placeholder="Ay">
                                <span asp-validation-for="OrderHeader.ExpirationMonth" class="text-danger"></span>
                            </div>
                            <div class="col-sm-2">
                                <label>Yıl</label>
                                <input type="text" asp-for="OrderHeader.ExpirationYear" class="form-control" id="YearInput" placeholder="Yıl">
                                <span asp-validation-for="OrderHeader.ExpirationYear" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4">
                                <label>Güvenlik Kodu</label>
                                <input type="text" asp-for="OrderHeader.Cvc" class="form-control" placeholder="Güvenlik Kodu">
                                <span asp-validation-for="OrderHeader.Cvc" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <button type="submit" id="CompleteOrder"><i class="bi bi-check-circle-fill"></i> Sipariş Tamamla</button>
                    </div>
                    <div class="col-md-4">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}