@model IEnumerable<ECommerceProject.Models.Product>
@{
    ViewData["Title"] = "CategoryDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Customer/Home/homeIndex.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="row">
        @await Component.InvokeAsync("CategoryList")
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                @if (item.IsHome)
                {
                    <div class="col-md-3">
                        <div class="card" id="ProductsCard">
                            <img src="@item.Image" class="card-img-top" alt="...">
                            <div class="card-header">
                                @item.Title
                            </div>
                            <div class="card-footer">
                                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" id="DetailButton">Detay</a>
                                <i class="bi bi-search"></i>
                                <label><b>@item.Price.ToString("0.00")₺</b></label>
                            </div>
                        </div>
                    </div>
                }

                else
                {
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-4">
                        <center>
                            <span style="font-weight:bold; padding: 5px; padding-right: 10px; padding-left: 10px; background-color: black; color: white; border-radius: 50px;">Herhangi Bir Ürün Bulunmamaktadır</span>
                        </center>
                    </div>
                    <div class="col-md-4">

                    </div>
                }
            }
        }

        else
        {
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <center>
                    <span style="font-weight:bold; padding: 5px; padding-right: 10px; padding-left: 10px; background-color: black; color: white; border-radius: 50px;">Herhangi Bir Ürün Bulunmamaktadır</span>
                </center>
            </div>
            <div class="col-md-4">

            </div>
        }
    </div>
</div>

