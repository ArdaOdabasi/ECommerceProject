@model IEnumerable<ECommerceProject.Models.Product>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Customer/Home/homeIndex.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="row">
        @await Component.InvokeAsync("CategoryList")
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card" id="ProductsCard">
                        <img src="@item.Image" class="card-img-top" alt="...">
                        <div class="card-header">
                            @item.Title
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" id="DetailButton">Detay</a>
                            <i class="bi bi-search"></i>
                            <label><b>@item.Price.ToString("0.00")₺</b></label>
                        </div>
                    </div>
                </div>
            }
        }

        else
        {
            <div class="alert alert-warning text-center">
                Herhangi bir ürün bulunmamaktadır...
            </div>
        }
    </div>
</div>

