@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Kurtarma Kodu Doğrulaması";
}

<head>
    <link href="~/css/Identity/Account/LoginWithRecoveryCode.css" rel="stylesheet" type="text/css" />
</head>

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    Bir kurtarma koduyla oturum açma talebinde bulundunuz.Bu giriş, siz oturum açarken bir doğrulayıcı uygulama kodu sağlayana veya 2FA'yı devre dışı bırakıp tekrar oturum açana kadar hatırlanmayacaktır.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" id="Login">Giriş Yap</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
