@page
@model ForgotPasswordModel

<head>
    <link href="~/css/Identity/ForgotPassword.css" rel="stylesheet" />
</head>

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <h4>Şifremi Unuttum</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                Email
                <input asp-for="Input.Email" class="form-control" id="EmailInput" placeholder="Email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <center>
                <button type="submit" id="SubmitButton">Gönder</button>
            </center>
        </form>
    </div>
    <div class="col-md-4">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
