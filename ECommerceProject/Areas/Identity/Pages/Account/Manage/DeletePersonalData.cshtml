@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Kişisel Verileri Sil";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<head>
    <link href="~/css/Identity/Account/Manage/DeletePersonalData.css" rel="stylesheet" type="text/css" />
</head>

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Bu verilerin silinmesi hesabınızı kalıcı olarak kaldırır ve bu işlem kurtarılamaz.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                Şifre
                <input asp-for="Input.Password" class="form-control" id="Input"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button id="DeleteData">Verileri Sil ve Hesabımı Kapat</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}