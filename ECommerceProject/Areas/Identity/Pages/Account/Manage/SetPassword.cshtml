@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Şifreyi Belirle";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<head>
    <link href="~/css/Identity/Account/SetPassword.css" rel="stylesheet" type="text/css" />
</head>

<h4 style="color: #786a27;">Şifrenizi Belirleyin</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-dark">
    Bu site için yerel bir kullanıcı adınız/şifreniz yok.Harici bir oturum açmadan oturum açabilmek için yerel bir hesap ekleyin.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" id="SetPassword">Şifre Belirle</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}