@model ECommerceProject.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Category/createCategory.css" rel="stylesheet" type="text/css" />
</head>

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <center>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <span id="CategoryNameText">Kategori Adı</span>
                    <input asp-for="Name" class="form-control" placeholder="Kategori Adı" id="CategoryNameInput" />
                    <i class="bi bi-tags-fill"></i>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <i class="bi bi-plus"></i>
                    <input type="submit" value="Yeni Kategori Ekle" id="AddNewCategory" />
                </div>
                <div>
                    <i class="bi bi-reply-fill"></i>
                    <a asp-action="Index" id="BackToCategoryList">Kategori Listesine Dön</a>
                </div>
            </form>
        </center>
    </div>
    <div class="col-md-4">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
