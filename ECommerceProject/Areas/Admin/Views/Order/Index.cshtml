@model IEnumerable<ECommerceProject.Models.OrderHeader>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Order/Index.css" rel="stylesheet" type="text/css" />
</head>

<center>
    <div class="col-md-8">
        <div class="btn-group d-grid gap-2 d-md-flex justify-content-md-end" role="group" aria-label="Basic outlined example">
            <a asp-action="Pended" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-dark">Beklenen Siparişler</a>
            <a asp-action="Confirmed" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-dark">Onaylanan Siparişler</a>
            <a asp-action="Shipped" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-dark">Kargolanan Siparişler</a>
            <a asp-action="Index" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-dark active">Tüm Siparişler</a>
        </div>
    </div>
</center>
<br />

<div class="container">
    <center>
        <div class="col-md-10">
            <table class="table table-striped table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th style="text-align: center">
                            Adı
                        </th>
                        <th style="text-align: center">
                            Soyadı
                        </th>
                        <th style="text-align: center">
                            Telefon
                        </th>
                        <th style="text-align: center">
                            Durum
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Surname
                            </td>
                            <td>
                                @item.PhoneNumber
                            </td>
                            <td>
                                @item.OrderStatus
                            </td>
                            <td>
                                @if (User.IsInRole(RoleOrderStatusSessionOperations.Role_Admin))
                                {
                                    <a asp-action="Details" asp-route-id="@item.Id" id="EditButton"><i class="bi bi-pencil-square"></i> Düzenle</a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@item.Id" id="DetailButton"><i class="bi bi-search"></i> Detay</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </center>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({

                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>
}


