
@model ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/User/deleteUser.css" rel="stylesheet" type="text/css" />
</head>

<p id="Text">Bu kullanıcıyı silmek istediğinizden emin misiniz?</p>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <span id="UserEmailText">Email</span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Kullanıcıyı Sil" id="DeleteUser" />
        <i class="bi bi-trash"></i>
        <a asp-action="Index" id="BackToUserList">Kullanıcı Listesine Dön</a>
        <i class="bi bi-reply-fill"></i>
    </form>
</div>

