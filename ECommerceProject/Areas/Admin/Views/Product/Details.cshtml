@model ECommerceProject.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/Product/detailsProduct.css" rel="stylesheet" />
</head>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Resim
        </dt>
        <dd class="col-sm-10">
            <div class="col-md-4">
                @if (Model.Image == null)
                {
                    <img src="~/images/GoruntuYok.jpg" />
                }
                else
                {
                    <img src="@Model.Image" width="100" height="100" />
                }
            </div>
        </dd>
        <dt class="col-sm-2">
            Başlık
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Kategori
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)₺
        </dd>
        <dt class="col-sm-2">
            Ana Sayfa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsHome)
        </dd>
        <dt class="col-sm-2">
            Stok
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsStock)
        </dd>
    </dl>
</div>
<div>
        <i class="bi bi-pencil-square"></i>
        <a asp-action="Edit" asp-route-id="@Model.Id" id="EditProduct">Düzenle</a>
        <i class="bi bi-reply-fill"></i>
        <a asp-action="Index" id="BackToProductList"><span style="color:white;">Ürün Listesine Dön</span></a>
</div>
